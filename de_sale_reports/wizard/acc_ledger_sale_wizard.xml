<odoo>
  <data>
           <!--Display form view of wizard-->    
        <record id="view_acc_ledger_wizard_form" model="ir.ui.view">
            <field name="name">acc.ledger.wizard.form</field>
            <field name="model">acc.ledger.wizard</field>
            <field name="arch" type="xml">
                <form string="Property Sale Report">
                    <group>
                        
                       <group>
                              <field name="date_from" />
                      </group>
                        
                      <group>
                           <field name="date_to" />
                      </group>                        
                             
                       </group>
                    
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_acc_ledger_wizard_action" model="ir.actions.act_window">
            <field name="name">Property Sale Report</field>
            <field name="res_model">acc.ledger.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_acc_ledger_wizard_form"/>
        </record>
      
       <menuitem id="menu_property_sale_acc_pay" name="Sales" parent="de_property_report.menu_property_reporting"  action='open_acc_ledger_wizard_action'
             sequence="11"/>
      
  </data>
</odoo>