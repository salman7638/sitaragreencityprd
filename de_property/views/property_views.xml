<odoo>
    <data>
        
        <menuitem id="menu_property_type" name="Property" parent="menu_property_config" groups="de_property.group_property_manager" sequence="10"/>
        
        <!-- Property Type -->
        <record id="property_type_form_view" model="ir.ui.view">
            <field name="name">product.type.form.view</field>
            <field name="model">op.property.type</field>
            <field name="arch" type="xml">
                <form string="Property Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Property Type" />
                            <h1><field name="name" placeholder="e.g. Housing Society"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_property_type" model="ir.actions.act_window">
            <field name="name">Property Type</field>
            <field name="res_model">op.property.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No property types found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem id="menu_property_type_property_type" name="Property Type" parent="menu_property_type"
            action="action_property_type" groups="de_property.group_property_manager" sequence="10"/>
        
        <!-- Property amenities -->
        <record id="property_amenities_form_view" model="ir.ui.view">
            <field name="name">product.amenities.form.view</field>
            <field name="model">op.property.amenities</field>
            <field name="arch" type="xml">
                <form string="Property Amenities">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Property Amenities" />
                            <h1><field name="name" placeholder="e.g. Private lift"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="percent" />
                            </group>
                            <group>
                                
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         <!-- Property amenities -->
        <record id="property_amenities_tree_view" model="ir.ui.view">
            <field name="name">product.amenities.tree.view</field>
            <field name="model">op.property.amenities</field>
            <field name="arch" type="xml">
                <tree>
                  <field name="name" />  
                  <field name="percent" />
                </tree>
            </field>
        </record>
        <record id="action_property_amenities" model="ir.actions.act_window">
            <field name="name">Property Amenities</field>
            <field name="res_model">op.property.amenities</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No property amenities found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem id="menu_property_type_property_amenities" name="Amenities" parent="menu_property_type"
            action="action_property_amenities" groups="de_property.group_property_manager" sequence="20"/>
        
        <!-- Property Locations -->
        <record id="view_location_search" model="ir.ui.view">
            <field name="name">stock.location.search</field>
            <field name="model">op.property.location</field>
            <field name="arch" type="xml">
                <search string="Property Locations">
                    <field name="complete_name" string="Locations"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>
        
        <record id="view_location_tree" model="ir.ui.view">
        <field name="name">view.location.tree</field>
        <field name="model">op.property.location</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <tree string="Property Location" decoration-info="usage=='view'" decoration-danger="usage=='normal'" multi_edit="1">
                <field name="active" invisible="1"/>
                <field name="complete_name" string="Location"/>
                <field name="usage"/>
            </tree>
        </field>
        </record>
        
        <record id="view_location_form" model="ir.ui.view">
            <field name="name">view.location.form</field>
            <field name="model">op.property.location</field>
            <field name="arch" type="xml">
                <form string="Property Location" >
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. Floor 1"/></h1>
                        <label for="location_id"/>
                        <h2><field name="location_id" placeholder="e.g. Block A" options="{'no_create': True}"/></h2>
                        
                        <group>
                            <group string="Additional Information" name="additional_info">
                                <field name="active" invisible="1"/>
                                <field name="phase_location"/>
                                <field name="sequence"/>
                                <field name="usage"/>
                            </group>
                        </group>
                        <field name="comment" placeholder="External note..."/>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_property_locations" model="ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="res_model">op.property.location</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_location_tree"/>
            <field name="search_view_id" ref="view_location_search"/>
        </record>
        <menuitem id="menu_property_type_property_location" name="Property Locations" parent="menu_property_type"
            action="action_property_locations" groups="de_property.group_property_manager" sequence="30"/>

        
        <!-- Property -->
        <record id="property_form_view" model="ir.ui.view">
            <field name="name">property.form.view</field>
            <field name="model">op.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <sheet>
                        <field name="property_image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" string="Property" />
                            <h1><field name="name" placeholder="e.g. Apartment"/></h1>
                        </div>
                        <notebook colspan="4">
                        <page string="Address" name="address_info">
                            <group>
                                <group>
                                    <field name="partner_id" string="Contact" readonly="1" required="0" />
                                    <label for="street" string="Address"/>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                    </div>
                                </group>
                                <group>
                                    <field name="phone" class="o_force_ltr"/>
                                    <field name="mobile" class="o_force_ltr"/>
                                    <field name="email"/>
                                    <field name="parent_id"  groups="base.group_multi_company"/>
                                    <field name="sequence" invisible="1"/>
                                </group>
                            </group>
                            </page>
                            <page string="Property Details" name="property_info">
                                <group>
                                    <group>
                                        <field name="property_type_id" placeholder="Property Type" options='{"no_open": True}' required="1"/>
                                        <field name="property_area" string="Size (in Sq. ft)" required="1"/>
                                        <field name="no_of_blocks" />
                                    </group>
                                    <group name="property_amenities">
                                        <field name="property_amenities_ids" widget="many2many_checkboxes" />
                                    </group>
                                </group>
                            </page>
                            <page name="property_locations" string="Locations">
                                <field name="property_location_ids" />
                            </page>
                        </notebook>
                    </sheet>
                    
                </form>
            </field>
        </record>
        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">op.property</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No property types found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem id="menu_property_type_property" name="Property" parent="menu_property_type"
            action="action_property" groups="de_property.group_property_manager" sequence="40"/>

        
        <!-- Property Units -->
        <menuitem id="menu_property_config_units" name="Units" parent="menu_property_config" groups="de_property.group_property_manager" sequence="20"/>
        
        
        <record id="property_unit_feature_form_view" model="ir.ui.view">
            <field name="name">property.unit.feature.form.view</field>
            <field name="model">op.property.unit.feature</field>
            <field name="arch" type="xml">
                <form string="Property Unit Feature">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Property" />
                            <h1><field name="name" placeholder="e.g. Room"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="evaluation_type" widget="radio" />
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="feature_items" string="Items" attrs="{'invisible':[('evaluation_type','!=','selection')]}">
                                <field name="feature_item_ids" widget="one2many" attrs="{'invisible':[('evaluation_type','!=','selection')]}">
                                    <tree string="Feature" editable="bottom" >
                                        <field name="property_unit_feature_id" invisible="1" />
                                        <field name="name" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_property_unit_feature" model="ir.actions.act_window">
            <field name="name">Property Unit Feature</field>
            <field name="res_model">op.property.unit.feature</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No property feature found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem id="menu_property_unit_feature" name="Features" parent="menu_property_config_units"
            action="action_property_unit_feature" groups="de_property.group_property_manager" sequence="10"/>
    
        
        <!-- Property Feature Group -->        
        <record id="property_unit_feature_group_tree_view" model="ir.ui.view">
            <field name="name">op.property.unit.feature.group.tree.view</field>
            <field name="model">op.property.unit.feature.group</field>
            <field name="arch" type="xml">
                <tree string="Features" >
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="property_unit_feature_group_form_view" model="ir.ui.view">
            <field name="name">property.unit.feature.group.form.view</field>
            <field name="model">op.property.unit.feature.group</field>
            <field name="arch" type="xml">
                <form string="Property Unit Feature Group">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Feature Group" />
                            <h1><field name="name" placeholder="e.g. Near by location"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="display_type" widget="radio" options="{'horizontal':False}" />
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="feature_info" string="Features">
                                <field name="property_unit_feature_group_line" widget="one2many" >
                                    <tree string="Features" editable="bottom" >
                                        <field name="property_unit_feature_group_id" invisible="1" />
                                         <field name="property_unit_feature_id" options="{'no_create':True}" required="1"/>
                                        <field name="property_feature_evaluation_type" readonly="1"/>
                                        
                                         <field name="property_unit_feature_item_select" options="{'horizontal':True}" attrs="{'invisible':[('property_feature_evaluation_type','!=','boolean')],'required':[('property_feature_evaluation_type','=','boolean')]}"/>
                                        <field name="property_unit_feature_item_id" string="Records" options="{'no_create':True}" attrs="{'invisible':[('property_feature_evaluation_type','!=','selection')],'required':[('property_feature_evaluation_type','=','selection')]}"/>
                                        <field name="property_unit_feature_item" attrs="{'invisible':[('property_feature_evaluation_type','!=','text')],'required':[('property_feature_evaluation_type','=','text')]}"/>
                                        
                                        <field name="name" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_property_unit_feature_group" model="ir.actions.act_window">
            <field name="name">Feature group</field>
            <field name="res_model">op.property.unit.feature.group</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No feature group found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem id="menu_property_unit_feature_group" name="Feature Group" parent="menu_property_config_units"
            action="action_property_unit_feature_group" groups="de_property.group_property_manager" sequence="20"/>
        
        
        <record id="property_unit_type_form_view" model="ir.ui.view">
            <field name="name">product.unit.type.form.view</field>
            <field name="model">op.property.unit.type</field>
            <field name="arch" type="xml">
                <form string="Property Unit Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Unit Type" />
                            <h1><field name="name" placeholder="e.g. Homes"/></h1>
                            <label for="property_type_id"/>
                            <h2><field name="property_type_id" placeholder="e.g. Housing Society" options="{'no_create': True}"/></h2>
                        </div>
                        <notebook>
                            <page name="property_unit_feature_category" string="Feature Categories">
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_property_type_unit_type" model="ir.actions.act_window">
            <field name="name">Property UnitType</field>
            <field name="res_model">op.property.unit.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No property unit types found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem id="menu_property_type_property_unit_type" name="Type" parent="menu_property_config_units"
            action="action_property_type_unit_type" groups="de_property.group_property_manager" sequence="20"/>
        
         <record id="action_quotations_with_property" model="ir.actions.act_window">
            <field name="name">Quotations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="context">{'search_default_my_quotation': 1}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new sale!
              </p><p>
                Once the quotation is confirmed by the customer, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment.
              </p>
            </field>
        </record>
        
        <menuitem id="menu_sale_quotations_property"
                name='Booking'  
                action="action_quotations_with_property"
                parent="de_property.menu_property_property"                 
                sequence="1" />
        
    </data>
</odoo>