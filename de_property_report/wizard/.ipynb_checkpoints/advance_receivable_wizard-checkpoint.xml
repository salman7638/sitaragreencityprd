<odoo>
  <data>
           <!--Display form view of wizard-->    
        <record id="view_advance_receivable_wizard_form" model="ir.ui.view">
            <field name="name">advance.receivable.wizard.form</field>
            <field name="model">advance.receivable.wizard</field>
            <field name="arch" type="xml">
                <form string="Advance Receivable Report">
                    <group>
                        
                       <group>
                              <field name="date_from" />
                              <field name="type" />  
                      </group>
                        
                      <group>
                        <field name="date_to" />
                        
                      </group>                        
                        
                    </group>
                    
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_advance_receivable_wizard_action" model="ir.actions.act_window">
            <field name="name">Forcast Receivables</field>
            <field name="res_model">advance.receivable.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_advance_receivable_wizard_form"/>
        </record>
      
     
       <menuitem id="menu_property_forcasted_receivable" name="Forcast Receivables" parent="menu_property_reporting"
            action='open_advance_receivable_wizard_action'  sequence="13"/>
      
  </data>
</odoo>