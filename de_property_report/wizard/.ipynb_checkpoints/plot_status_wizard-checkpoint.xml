<odoo>
  <data>
           <!--Display form view of wizard-->    
        <record id="view_plot_status_report_wizard_form" model="ir.ui.view">
            <field name="name">plot.status.wizard.form</field>
            <field name="model">plot.status.wizard</field>
            <field name="arch" type="xml">
                <form string="Plot Status Report">
                    <group>
                        
                       <group>
                              <field name="date" />
                      </group>
                        
                      <group>
                      </group>                        
                        
                    </group>
                    <notebook>
                        <page string='Phases'>
                            <field name='phase_ids' />
                        </page>
                    </notebook>
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_plot_status_wizard_action" model="ir.actions.act_window">
            <field name="name">Plot Status Report</field>
            <field name="res_model">plot.status.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_plot_status_report_wizard_form"/>
        </record>
      
       <menuitem id="menu_property_reporting" name="Reporting" parent="de_property.property_menu_root"
             sequence="59"/>
      
       <menuitem id="menu_property_plot_status" name="Plot Status Report" parent="menu_property_reporting"  action='open_plot_status_wizard_action'
             sequence="10"/>
      
  </data>
</odoo>