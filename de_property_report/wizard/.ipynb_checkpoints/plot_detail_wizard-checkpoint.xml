<odoo>
  <data>
           <!--Display form view of wizard-->    
        <record id="view_plot_detail_wizard_form" model="ir.ui.view">
            <field name="name">plot.detail.wizard.form</field>
            <field name="model">plot.detail.wizard</field>
            <field name="arch" type="xml">
                <form string="Plot Detail Report">
                    <group>
                        
                       <group>
                            <field name="type" />
                      </group>
                        
                      <group>
                      </group>                        
                        
                    </group>
                    
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_plot_detail_wizard_action" model="ir.actions.act_window">
            <field name="name">Plot Detail Report</field>
            <field name="res_model">plot.detail.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_plot_detail_wizard_form"/>
        </record>
      
       
       <menuitem id="menu_property_plot_details" name="Plots Detail" parent="menu_property_reporting"  action='open_plot_detail_wizard_action'
             sequence="10"/>
      
  </data>
</odoo>