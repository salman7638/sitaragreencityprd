<odoo>
  <data>
           <!--Display form view of wizard-->    
        <record id="view_partner_ledger_wizard_form" model="ir.ui.view">
            <field name="name">partner.ledger.wizard.form</field>
            <field name="model">partner.ledger.wizard</field>
            <field name="arch" type="xml">
                <form string="Partner Ledger Report">
                    <group>
                        
                       <group>
                              <field name="date_from" />
                              <field name="state" string="Status"/>
                      </group>
                        
                      <group>
                        <field name="date_to" />
                        
                      </group>                        
                        
                    </group>
                    
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_partner_ledger_wizard_action" model="ir.actions.act_window">
            <field name="name">Partner Ledger</field>
            <field name="res_model">partner.ledger.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_partner_ledger_wizard_form"/>
        </record>
      
     
       <menuitem id="menu_partner_ledger" name="Partner Ledger Report" parent="de_property_report.menu_property_reporting"
            action='open_partner_ledger_wizard_action'  sequence="19"/>
      
  </data>
</odoo>