<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_plot_update_wizard_form" model="ir.ui.view">
            <field name="name">plot.update.wizard.form</field>
            <field name="model">plot.update.wizard</field>
            <field name="arch" type="xml">
                <form string="Plot Update">
                    <group>
                      <group>
                          <field name="plot_update_id"/>
                          <field name="plot_id" invisible="1"/>
                      </group>                     
                    </group>                   
                    <footer>
                        <button string='Confirm' name="action_confirm" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_plot_update_wizard_action" model="ir.actions.act_window">
            <field name="name">Plot Update</field>
            <field name="res_model">plot.update.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_plot_update_wizard_form" />
         </record>
    
    </odoo>
    
    
    
    