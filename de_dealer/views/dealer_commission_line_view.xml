<?xml version="1.0" encoding="UTF-8" ?>

<odoo>


    
    <record id="views_commission_rate_line_tree"  model="ir.ui.view">
        <field name="name">commission.rate.line.tree</field>
        <field name="model">sale.dealer.commission.line</field>
        <field name="arch" type="xml">
            <tree string="Commission line" editable="bottom" >
                <field name="name"/>
                <field name="sale_id"/>
                <field name="date_order"/>
                <field name="dealer_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="amount_received"/>
                <field name="amount_total"/>
                <field name="comission_rate" widget="percentage" force_save="1"/>
                <field name="commision_amount" force_save="1"/>
                <field name="state"/>          
            </tree>
        </field>
    </record>

    <record id="action_commission_line" model="ir.actions.act_window">
        <field name="name">Commission Line</field>
        <field name="res_model">sale.dealer.commission.line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>

    



    