<odoo>
  <data>
      
        <record id="account_batch_payment_form_view_property" model="ir.ui.view">
			<field name="name">account.batch.payment.form.view.batch.property</field>
			<field name="model">account.batch.payment</field>
			<field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
			 <field name="arch" type="xml">                 
                <xpath expr="//field[@name='journal_id']" position="after">
                       <field name='order_id' string='Booking/Allotment' invisible='1'/>
                </xpath>                 
             </field>
          </record> 
      
         <record id="account_batch_payment_tree_view_property_tot" model="ir.ui.view">
			<field name="name">account.batch.payment.tree.view.property</field>
			<field name="model">account.batch.payment</field>
			<field name="inherit_id" ref="account_batch_payment.view_batch_payment_tree"/>
			 <field name="arch" type="xml">                 
                <xpath expr="//field[@name='amount']" position="replace">
                      <field name="amount" sum='Total'/>
                </xpath>                 
             </field>
          </record> 

      
  </data>
</odoo>