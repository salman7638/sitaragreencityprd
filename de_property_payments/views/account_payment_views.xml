<odoo>
  <data>
      
        <record id="account_payment_form_view_property" model="ir.ui.view">
			<field name="name">account.payment.form.view.property</field>
			<field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_form"/>
			 <field name="arch" type="xml">                 
                <xpath expr="//field[@name='journal_id']" position="after">
                       <field name='order_id' string='Booking/Allotment' invisible='1'/>
                       <field name='plot_id' string='plot' invisible='1'/>
                       
                       <field name='type'  invisible='1'/>
                       <field name='processing_fee_submit'  invisible='1'/>
                       <field name='membership_fee_submit'  invisible='1'/>
                       <field name='installment_id'  invisible='1'/>
                       <field name='remarks' attrs="{'readonly': [('state', '=', 'posted')]}" />
                </xpath>                 
             </field>
          </record> 



      
  </data>
</odoo>