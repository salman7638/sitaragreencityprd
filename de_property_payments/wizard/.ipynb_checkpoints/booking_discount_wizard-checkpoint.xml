<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_booking_discount_wizard_form" model="ir.ui.view">
            <field name="name">booking.discount.wizard.form</field>
            <field name="model">booking.discount.wizard</field>
            <field name="arch" type="xml">
                <form string="Resell">
                    <group>
                      <group>
                          <field name="discount" />
                          <field name="installment_created" invisible='1'/>
                      </group>
                      <group>
                          <field name="sale_id"  invisible='1'/>                          
                      </group>                        
                    </group> 
                    
                    <notebook>
                        <page string='Plots' attrs="{'invisible': [('installment_created','=',True)]}" >
                            <field name='plot_ids' >
                            <tree editable='bottom'>
                                <field name='product_id' />
                                <field name='company_id' />
                            </tree>
                            </field>
                        </page>
                    </notebook>
                    
                    <footer>
                        <button string='Confirm' name="action_book_discount" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_booking_discount_wizard_action" model="ir.actions.act_window">
            <field name="name">Discount</field>
            <field name="res_model">booking.discount.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_booking_discount_wizard_form" />
         </record>
    
    </odoo>
    
    
    
    