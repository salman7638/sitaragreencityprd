<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_register_installment_wizard_form" model="ir.ui.view">
            <field name="name">register.installment.wizard.form</field>
            <field name="model">register.installment.wizard</field>
            <field name="arch" type="xml">
                <form string="Register">
                    <group>
                      <group>
                          <field name="number_of_installment" />
                          
                      </group>
                      <group>
                          <field name="date" />
                          
                          <field name="sale_id" widget='many2many_tags' invisible='1'/>                          
                      </group>                        
                    </group>                   
                    <footer>
                        <button string='Confirm' name="action_confirm" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_register_installment_wizard_action" model="ir.actions.act_window">
            <field name="name">Register Installment</field>
            <field name="res_model">register.installment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_register_installment_wizard_form" />
         </record>
    
    </odoo>
    
    
    
    