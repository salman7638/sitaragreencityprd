        <field name="domain">[('project_cost_sheet_id','=',active_id)]</field>
        <field name="context">{
            "default_project_cost_sheet_id":active_id,
            "default_user_id": False,
            }
        </field>
    </record>
      
      <record model="ir.actions.act_window" id="action_job_orders_list">
        <field name="name">Job Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('project_cost_sheet_id','=',active_id)]</field>
