<odoo>
    <data>
    <!-- New note Tree View -->
    <record id="view_project_note_note_tree" model="ir.ui.view">
      <field name="name">project.note.note.tree</field>
      <field name="model">note.note</field>
      <field name="arch" type="xml">
        <tree string="Stages">
          <field name="name"/>
          <field name="open"/>
            <field name="project_id"/>
            <field name="task_id"/>
          <field name="stage_id"/>
          <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
          <field name="activity_ids" widget="list_activity" optional="show"/>
        </tree>
      </field>
    </record>
        
        <!-- New project note Form View -->
    <record id="view_project_note_note_form" model="ir.ui.view">
        <field name="name">project.note.note.form</field>
        <field name="model">note.note</field>
        <field name="arch" type="xml">
            <form string="Note" class="oe_form_nomargin o_note_form_view">
                <header>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Tags"/>
                    <field name="stage_id" domain="[('user_id','=',uid)]" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name='project_id' required="1"/>
                            <field name='task_id' />
                        </group>
                    </group>
                  <field name="memo" type="html" class="oe_memo"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
        
    <!-- New task note Form View -->
    <record id="view_project_task_note_note_form" model="ir.ui.view">
        <field name="name">project.task.note.note.form</field>
        <field name="model">note.note</field>
        <field name="arch" type="xml">
            <form string="Note" class="oe_form_nomargin o_note_form_view">
                <header>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Tags"/>
                    <field name="stage_id" domain="[('user_id','=',uid)]" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name='project_id' required="1"/>
                            <field name='task_id' required="1"/>
                        </group>
                    </group>
                  <field name="memo" type="html" class="oe_memo"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
        
        
        <record id="act_project_project_note_all" model="ir.actions.act_window">
            <field name="name">Note</field>
            <field name="res_model">note.note</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_project_note_note_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_project_note_note_form')})]"/>
            <field name="domain">[('project_id', '=', active_id)]</field>
            <field name="context">{
                'default_project_id': active_id,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
            Add a new personal note
          </p><p>
            Notes are private, unless you share them by inviting follower on a note.
            (Useful for meeting minutes).
          </p>
            </field>
        </record>
        
        <record id="act_project_task_note_all" model="ir.actions.act_window">
            <field name="name">Note</field>
            <field name="res_model">note.note</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_project_note_note_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_project_task_note_note_form')})]"/>
            <field name="domain">[('task_id', '=', active_id)]</field>
            <field name="context">{
                'default_project_id': active_id,
                'default_task_id': active_id,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
            Add a new personal note
          </p><p>
            Notes are private, unless you share them by inviting follower on a note.
            (Useful for meeting minutes).
          </p>
            </field>
        </record>
        

    </data>
</odoo>