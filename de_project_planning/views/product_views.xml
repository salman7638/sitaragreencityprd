<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- inherit Product Template form view -->
        <record id="product_template_only_form_view_inherit_job_type" model="ir.ui.view">
            <field name="name">product.template.only.form.view.inherit.job.type</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="job_type_id" options="{'no_create':False}" />
                </xpath>
                
            </field>
        </record>
        
        <record id="product_normal_form_view_inherit_job_type" model="ir.ui.view">
            <field name="name">product.normal.form.view.job.type</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="job_type_id" options="{'no_create':False}" />
                </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>